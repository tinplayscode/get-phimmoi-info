//- layout
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} - trungtin.codes
    
    //- bootstrap 5
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    //- jQuery lastest
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
    //- alpinejs
    script(src="//unpkg.com/alpinejs" defer)

  //- set body bg gray, center content
  body.mt-4(style="background-color: #f5f5f5")
    //- Header
  
    //- container bg white, rounded and shadow, padding 
    .container.rounded(style="background-color: #fff; box-shadow: 0px 0px 10px #ccc; padding: 20px")
      block content

    //- Footer

